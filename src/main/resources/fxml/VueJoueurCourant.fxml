<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="VueJoueurCourant" alignment="TOP_CENTER" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="spriteJoueur" />
      <Label fx:id="nomJoueur" text="nomJoueur" />
      <HBox>
         <Label text="Score : " />
         <Label fx:id="scoreJoueur" />
      </HBox>
      <HBox>
         <Label text="Pions Bateau : " />
         <Label fx:id="nbPionsBateauJoueur" />
      </HBox>
      <HBox>
         <Label text="Pions Wagon : " />
         <Label fx:id="nbPionsWagonJoueur" />
      </HBox>
      <VBox fx:id="destinationsJoueurCourant" />
      <Label text="Cartes Transports : ">
         <padding>
            <Insets top="10.0" />
         </padding></Label>
      <ScrollPane hbarPolicy="NEVER">
         <FlowPane fx:id="carteTransportJoueurFlowPane" prefHeight="200.0" prefWidth="400.0" />
      </ScrollPane>
      <Label text="Cartes Transports Posees: ">
         <padding>
            <Insets top="10.0" />
         </padding></Label>
      <ScrollPane hbarPolicy="NEVER">
         <FlowPane fx:id="carteTransportPoseesJoueurFlowPane" prefHeight="200.0" prefWidth="400.0" />
      </ScrollPane>
   </children>
</fx:root>
