<?xml version="1.0" encoding="UTF-8"?>

<?import fr.umontpellier.iut.rails.vues.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="vueDuJeu" prefWidth="2500" type="BorderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="instructionHBox" alignment="CENTER" maxWidth="Infinity" minWidth="500" BorderPane.alignment="TOP_CENTER">
            <Label fx:id="instructionLabel" alignment="CENTER" contentDisplay="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <left>
        <VBox fx:id="vboxJoueurs">
            <padding>
                <Insets bottom=".0" left="10.0" right="20.0" top=".0" />
            </padding>
            <VueJoueurCourant fx:id="vueJoueurCourant">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VueJoueurCourant>
        </VBox>
    </left>
    <right>
        <VueAutresJoueurs fx:id="vueAutreJoueur" alignment="BASELINE_CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VueAutresJoueurs>
    </right>
    <center>
            <VuePlateau fx:id="plateau"/>
    </center>
    <bottom>
        <GridPane alignment="BASELINE_CENTER" prefHeight="300">
            <HBox alignment="BASELINE_LEFT" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox alignment="BASELINE_CENTER">
                    <Spinner fx:id="selecteurNombre"/>
                    <AnimatedButton fx:id="confirmerNombre" text="Confirmer" />
                </HBox>
                <AnimatedButton fx:id="pionsWagonBtn" text="Échanger pions Wagon" />
                <AnimatedButton fx:id="pionsBateauBtn" text="Échanger pions Bateau" />
            </HBox>
            <HBox alignment="BASELINE_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Button fx:id="passerBtn" mnemonicParsing="false" text="Passer">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
            <HBox fx:id="choixDestinationHBox" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="100.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                <StackPane>
                    <Label fx:id="spritePiocheWagon" />
                </StackPane>
                <StackPane>
                    <Label fx:id="spritePiocheBateau" />
                </StackPane>
            </HBox>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER" alignment="BASELINE_CENTER">
                <FlowPane fx:id="cartesTransportVisible" alignment="BASELINE_CENTER" />
            </HBox>
        </GridPane>
    </bottom>
</fx:root>
