<?xml version="1.0" encoding="UTF-8"?>

<?import fr.umontpellier.iut.rails.vues.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="vueDuJeu" prefWidth="2500" type="BorderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="instructionHBox" alignment="CENTER" maxWidth="Infinity" minWidth="500" BorderPane.alignment="TOP_CENTER">
            <Label fx:id="instructionLabel" alignment="CENTER" contentDisplay="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <left>
        <VBox fx:id="vboxJoueurs">
            <padding>
                <Insets bottom=".0" left="10.0" right="20.0" top=".0" />
            </padding>
            <VueJoueurCourant fx:id="vueJoueurCourant">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VueJoueurCourant>
        </VBox>
    </left>
    <right>
        <VueAutresJoueurs fx:id="vueAutreJoueur">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VueAutresJoueurs>
    </right>
    <center>
        <VBox alignment="TOP_CENTER">
            <VuePlateau fx:id="plateau" />
            <HBox alignment="BASELINE_LEFT" spacing="20">
                <HBox alignment="BASELINE_CENTER">
                    <Spinner fx:id="selecteurNombre" />
                    <AnimatedButton fx:id="confirmerNombre" text="Confirmer" />
                </HBox>
                <AnimatedButton fx:id="pionsWagonBtn" text="Échanger pions Wagon" />
                <AnimatedButton fx:id="pionsBateauBtn" text="Échanger pions Bateau" />
            </HBox>
            <HBox fx:id="choixDestinationHBox">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="100.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <FlowPane fx:id="cartesTransportVisible" prefHeight="200.0" prefWidth="100.0" />
            <HBox alignment="CENTER" spacing="20">
                <StackPane>
                    <Label fx:id="spritePiocheWagon" />
                </StackPane>
                <StackPane>
                    <Label fx:id="spritePiocheBateau" />
                </StackPane>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox>
            <HBox fx:id="botVBox" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="passerBtn" mnemonicParsing="false" text="Passer">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
</fx:root>
