<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="VueJoueurCourant" alignment="TOP_CENTER" maxHeight="-Infinity" minHeight="-Infinity" type="VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane>
            <VBox>
                <ImageView fx:id="ornTop" />
                <ImageView fx:id="ornBot" />
            </VBox>
            <Label fx:id="spriteJoueur" />
            
        </StackPane>
        <Label fx:id="nomJoueur" text="nomJoueur" />
        <HBox>
            <Label text="Score : " />
            <Label fx:id="scoreJoueur" />
        </HBox>
        <HBox>
            <Label text="Pions Bateau : " />
            <Label fx:id="nbPionsBateauJoueur" />
        </HBox>
        <HBox>
            <Label text="Pions Wagon : " />
            <Label fx:id="nbPionsWagonJoueur" />
        </HBox>
        <VBox fx:id="destinationsJoueurCourant" />
        <Label text="Cartes Transports : ">
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
        <ScrollPane hbarPolicy="NEVER" maxWidth="-Infinity" prefWidth="200.0">
            <FlowPane fx:id="carteTransportJoueurFlowPane" prefHeight="200.0" prefWidth="200.0" />
        </ScrollPane>
        <Label text="Cartes Transports Posees: ">
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
        <ScrollPane hbarPolicy="NEVER" maxWidth="-Infinity" prefWidth="200.0">
            <FlowPane fx:id="carteTransportPoseesJoueurFlowPane" prefHeight="200.0" prefWidth="400.0" />
        </ScrollPane>
    </children>
</fx:root>
