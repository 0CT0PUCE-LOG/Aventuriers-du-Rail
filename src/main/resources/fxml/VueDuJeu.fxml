<?xml version="1.0" encoding="UTF-8"?>

<?import fr.umontpellier.iut.rails.vues.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="vueDuJeu" prefWidth="2500" type="BorderPane" xmlns="http://javafx.com/javafx/17.0.2-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox>
            <HBox fx:id="instructionHBox" alignment="CENTER" minWidth="600"
                  BorderPane.alignment="TOP_CENTER">
                <Label fx:id="instructionLabel" alignment="CENTER" contentDisplay="CENTER" >
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </BorderPane.margin>
            </HBox>

            <VueAutresJoueurs fx:id="vueAutreJoueur" alignment="BASELINE_CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </BorderPane.margin>
            </VueAutresJoueurs>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </top>
    <left>
        <VBox fx:id="vboxJoueurs">
            <padding>
                <Insets bottom=".0" left="10.0" right="20.0" top=".0"/>
            </padding>
            <VueJoueurCourant fx:id="vueJoueurCourant">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox.margin>
                    <Insets left="10.0"/>
                </VBox.margin>
            </VueJoueurCourant>
        </VBox>
    </left>
    <right>
        <VBox>
            <padding>
                <Insets left="70.0" right="10.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="20">
                <StackPane>
                    <Label fx:id="spritePiocheWagon"/>
                </StackPane>
                <StackPane>
                    <Label fx:id="spritePiocheBateau"/>
                </StackPane>
            </HBox>
            <FlowPane fx:id="cartesTransportVisible" alignment="BASELINE_RIGHT" vgap="-50" prefWidth="120">
                <padding>
                    <Insets top="30"/>
                </padding>
            </FlowPane>
        </VBox>
    </right>
    <center>
        <VuePlateau fx:id="plateau"/>
    </center>
    <bottom>
        <GridPane alignment="BASELINE_CENTER" prefHeight="200">
            <HBox alignment="BASELINE_LEFT" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox alignment="BASELINE_CENTER">
                    <Spinner fx:id="selecteurNombre"/>
                    <AnimatedButton fx:id="confirmerNombre" text="Confirmer"/>
                </HBox>
                <AnimatedButton fx:id="pionsWagonBtn" text="Échanger pions Wagon"/>
                <AnimatedButton fx:id="pionsBateauBtn" text="Échanger pions Bateau"/>
                <AnimatedButton fx:id="piocheDestinationBtn" text="Piocher des cartes destination"/>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <AnimatedButton fx:id="passerBtn" mnemonicParsing="false" text="Passer">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </AnimatedButton>
            </HBox>
            <HBox fx:id="choixDestinationHBox" spacing="20" GridPane.columnIndex="0" GridPane.columnSpan="2"
                  GridPane.rowIndex="1">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="100.0" top="10.0"/>
                </VBox.margin>
            </HBox>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </bottom>
</fx:root>
