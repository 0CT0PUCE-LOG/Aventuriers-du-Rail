<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="VueJoueurCourant" alignment="TOP_CENTER" prefWidth="400" type="VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="HBoxJoueurCourant" alignment="CENTER" spacing="40">
            <VBox alignment="CENTER">
                <Label fx:id="nomJoueur" text="nomJoueur" />
                <HBox>
                    <Label text="Score : " />
                    <Label fx:id="scoreJoueur" />
                </HBox>
                <HBox>
                    <Label text="Pions Bateau : " />
                    <Label fx:id="nbPionsBateauJoueur" />
                </HBox>
                <HBox>
                    <Label text="Pions Wagon : " />
                    <Label fx:id="nbPionsWagonJoueur" />
                </HBox>
            </VBox>
            <VBox alignment="TOP_CENTER">
                <StackPane>
                    <VBox>
                        <ImageView fx:id="ornTop" />
                        <ImageView fx:id="ornBot" />
                    </VBox>
                    <Label fx:id="spriteJoueur" />
                </StackPane>
            </VBox>
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
        </HBox>
        <Label fx:id="labelDestination" text="Destinations : ">
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
        <ScrollPane fx:id="hoverScrollDestination" hbarPolicy="NEVER" maxHeight="50" maxWidth="Infinity">
            <VBox fx:id="destinationsJoueurCourant" />
        </ScrollPane>
        <Label text="Cartes Transports : ">
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
        <ScrollPane fx:id="hoverScroll" hbarPolicy="NEVER" maxHeight="50" maxWidth="Infinity">
            <FlowPane fx:id="carteTransportJoueurFlowPane" prefWidth="300" />
        </ScrollPane>
        <Label text="Cartes Transports Posees: ">
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
        <ScrollPane fx:id="hoverScrollPose" hbarPolicy="NEVER" maxHeight="50" maxWidth="Infinity">
            <FlowPane fx:id="carteTransportPoseesJoueurFlowPane" prefWidth="300" />
        </ScrollPane>
    </children>
</fx:root>
